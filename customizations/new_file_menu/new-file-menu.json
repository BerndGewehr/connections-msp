{
    "name": "New File Menu Customization",
    "title": "Customize new file action menu",
    "description": "Add custom action to new file menu",
    "services": [
        "Customizer"
    ],
    "extensions": [
        {
            "name": "Add custom new file action",
            "type": "com.ibm.customizer.ui",
            "payload": {
                "include-files": [
                    "newFileMenu/newFileExtension.js"
                ],
                "cache-headers": {
                    "cache-control": "max-age=38400"
                }
            },
            "path": "files"
        }
    ]
  }